<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/settheangletext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Set the angle on the needle guide:"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/whatangletext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonok"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginBottom="36dp"
        android:layout_marginStart="49dp"
        android:text="Guide Angle (deg):"
        android:textSize="25sp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/angleoutputtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/whatangletext"
        android:layout_alignBottom="@+id/whatangletext"
        android:layout_toEndOf="@+id/whatangletext"
        android:text="Output"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:drawableRight="@drawable/ic_forward_white_24dp"
        android:text="        Next"
        android:textAlignment="center"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="600dp"
        android:layout_below="@+id/settheangletext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        app:srcCompat="@drawable/setanglefixed" />

</RelativeLayout>