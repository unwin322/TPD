<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/targetoffcentretext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Attach the needle clip onto the needle guide:"
        android:textAlignment="center"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_above="@+id/imageView13"
        android:layout_alignStart="@+id/imageView13"
        app:srcCompat="@drawable/clip_onto_fixed" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_above="@+id/imageView14"
        android:layout_alignStart="@+id/imageView14"
        app:srcCompat="@drawable/clip_onto_fixed2" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_above="@+id/buttonok"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        app:srcCompat="@drawable/clip_onto_fixed3" />

    <Button
        android:id="@+id/buttonok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:drawableRight="@drawable/ic_forward_white_24dp"
        android:text="        Next"
        android:textAlignment="center"
        android:textSize="18sp"
        android:onClick="gorealtimestep4"/>

</RelativeLayout>