<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/settheangletext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:text="Set the angle on the needle guide:"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/whatangletext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/settheangletext"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/settheangletext"
        android:layout_marginBottom="86dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:text="Guide Angle (deg):"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/angleoutputtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/whatangletext"
        android:layout_alignBottom="@+id/whatangletext"
        android:layout_toEndOf="@+id/whatangletext"
        android:layout_toRightOf="@+id/whatangletext"
        android:text="Output"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settheangletext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        android:text="stabbystabbytime" />
    <Button
        android:id="@+id/buttonok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawableRight="@drawable/ic_forward_black_24dp"
        android:text="        Next"
        android:textAlignment="center"
        android:textSize="18sp" />

</RelativeLayout>