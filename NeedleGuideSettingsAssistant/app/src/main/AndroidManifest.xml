<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.loughbroughproject.needleguidesettingsassistant">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".GuideSelect"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MovingScaleAssistant"
            android:label="@string/title_activity_moving_scale_assistant"
            android:screenOrientation="portrait"
            android:parentActivityName=".GuideSelect"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.loughbroughproject.needleguidesettingsassistant.GuideSelect" />
        </activity>
        <activity
            android:name=".FixedScaleAssistant"
            android:label="@string/title_activity_fixed_scale_assistant"
            android:screenOrientation="portrait"
            android:parentActivityName=".GuideSelect"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.loughbroughproject.needleguidesettingsassistant.GuideSelect" />
        </activity>
        <activity
            android:name=".EpiduralAssistant"
            android:label="@string/title_activity_epidural_assistant"
            android:screenOrientation="portrait"
            android:parentActivityName=".GuideSelect"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.loughbroughproject.needleguidesettingsassistant.GuideSelect" />
        </activity>
        <activity
            android:name=".KeySystemAssistant"
            android:label="@string/title_activity_key_system_assistant"
            android:screenOrientation="portrait"
            android:parentActivityName=".GuideSelect"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.loughbroughproject.needleguidesettingsassistant.GuideSelect" />
        </activity>
    </application>

</manifest>